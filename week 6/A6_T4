print("Program starting.")
print("This program analyses a list of names from a file.")
filename = input("Insert filename to read: ")
print(f'Reading names from "{filename}".')
file = open(filename, "r")
lines = file.read()
file.close()
names = []
for line in lines:
    line = line.strip()
    if line != "":
        names.append(line)
print("Analysing names...")
count = len(names)
if count > 0:
    length = []
    for name in names:
        length.append(len(name))
        short = min(length)
        long = max(length)
        avg = sum(length) / count
else:
    short = long = avg = 0
print("Analysis complete!")
print("#### REPORT BEGIN ####")
print(f"Name count - {count}")
print(f"Shortest name - {short} chars")
print(f"Longest name - {long} chars")
print(f"Average name - {avg:.2f} chars")
print("#### REPORT END ####")
print("Program ending.")
